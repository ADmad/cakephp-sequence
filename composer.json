{
    "name": "admad/cakephp-sequence",
    "description": "Sequence plugin for CakePHP to maintain ordered list of records",
    "keywords": ["cakephp", "orm", "sequence", "list"],
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "cakephp/orm": "^4.0"
    },
    "require-dev": {
        "cakephp/cakephp": "^4.0",
        "phpunit/phpunit": "^8.5.0 || ^9.5.0",
        "cakephp/cakephp-codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "ADmad\\Sequence\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADmad\\Sequence\\Test\\": "tests/",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests/",
            "TestApp\\": "tests/test_app/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage" : "phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
        "stan": "phpstan analyse",
        "stan-tests": "phpstan analyse -c tests/phpstan.neon",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.0.0 && mv composer.backup composer.json",
        "lowest": "validate-prefer-lowest",
        "lowest-setup": "composer update --prefer-lowest --prefer-stable --prefer-dist --no-interaction && cp composer.json composer.backup && composer require --dev dereuromark/composer-prefer-lowest && mv composer.backup composer.json",
        "cs-check": "phpcs -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/"
    }
}
