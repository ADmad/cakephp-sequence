{
    "name": "admad/cakephp-sequence",
    "description": "Sequence plugin for CakePHP to maintain ordered list of records",
    "keywords": ["cakephp", "orm", "sequence", "list"],
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "cakephp/orm": "dev-4.next"
    },
    "require-dev": {
        "cakephp/cakephp": "dev-4.next",
        "phpunit/phpunit": "~8.5.0 || ^9.5"
    },
    "autoload": {
        "psr-4": {
            "ADmad\\Sequence\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADmad\\Sequence\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "TestApp\\": "tests/test_app/src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs --colors --parallel=16 -p src/ tests/",
        "cs-fix": "phpcbf --colors --parallel=16 -p src/ tests/",
        "phpstan": "tools/phpstan analyse",
        "psalm": "tools/psalm --show-info=false",
        "stan": [
            "@phpstan",
            "@psalm"
        ],
        "stan-setup": "phive install",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=clover.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
